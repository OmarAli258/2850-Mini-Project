{% extends "base.peb" %}
{% block title %}Book Details{% endblock %}

{% block content %}
<div class="book-page">

  <div class="book-title">{{ book.title }} (ID {{ book.id }})</div>

  <div class="book-top">
    <div class="book-image-box">
      <div class="img-placeholder">Book image</div>
      <div class="price">$25</div>
    </div>

    <div class="book-details">
      <div class="details-title">Details</div>
      <div class="details-lines">
        <div>description: A popular library book.</div>
        <div>date &amp; time: Available today</div>
        <div>location: {{ book.location }}</div>
      </div>
    </div>
  </div>

  <div class="divider"></div>

  <div class="availability">
    <div class="availability-title">Availability</div>

    <div class="slots">
      <button class="pill" type="button">1:00 pm - 2:00 pm</button>
      <button class="pill" type="button">2:30 pm - 3:30 pm</button>
      <button class="pill" type="button">4:00 pm - 5:00 pm</button>
    </div>

    <div class="loan-now">
      <a class="btn" href="/loan/confirm?bookId={{ book.id }}">Loan Now!</a>
    </div>
  </div>
</div>
{% endblock %}

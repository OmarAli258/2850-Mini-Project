<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>{% block title %}Library{% endblock %}</title>
  <link rel="stylesheet" href="/static/style.css">
</head>
<body>
  <div class="frame">
    <div class="topbar">
      <div class="left">
        <span class="logo-text">{{ libraryName | default("Library") }}</span>
      </div>
      <div class="right">
        {% if user %}
          <a class="toplink" href="/loans">My loans</a>
          <a class="toplink" href="/logout" style="margin-left:12px;">Logout</a>
        {% else %}
          <a class="toplink" href="/login">Sign in</a>
        {% endif %}
      </div>
    </div>

    {% block content %}{% endblock %}

    <div class="footer">
      <div>Contact: +44 1234567890</div>
      <div>Email: libraryname@leeds.ac.uk</div>
    </div>
  </div>
</body>
</html>
